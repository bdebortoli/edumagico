# Configuração do Ambiente
NODE_ENV=development

# Configuração do Servidor
PORT=3001

# Configuração do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=edumagico

# Configuração de Autenticação JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Configuração de CORS (para produção)
# Pode ser uma URL única ou múltiplas URLs separadas por vírgula
# Exemplo: https://seu-app.vercel.app
# Exemplo múltiplas: https://app1.vercel.app,https://app2.vercel.app
CORS_ORIGIN=

# Configuração do Gemini API (opcional)
# Obtenha sua chave em: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

