{
  "name": "edumagico-api",
  "version": "1.0.0",
  "description": "Backend API para EduMágico",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postbuild": "echo 'Build concluído. Execute as migrations e populações de rotas após o deploy.'",
    "migration:generate": "typeorm migration:generate -n",
    "migration:run": "typeorm migration:run -d src/config/database.ts",
    "migration:revert": "typeorm migration:revert -d src/config/database.ts",
    "populate:routes": "ts-node src/scripts/populateRoutes.ts",
    "populate:routes:prod": "node -r ts-node/register dist/scripts/populateRoutes.js",
    "restore:tabuada": "ts-node src/scripts/restoreTabuadaGame.ts",
    "update:education-levels": "ts-node src/scripts/updateEducationLevels.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
